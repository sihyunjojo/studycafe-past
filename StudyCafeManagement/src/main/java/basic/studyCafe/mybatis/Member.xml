<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "jung.spring.mybatis.MemberMapper">
	<!-- namespace가 Mapper 인터페이스의 풀패스와 동일해야 함 -->
	
	<resultMap type="member" id="MemberResultMap">
		<result property="id" column="ID"/>
		<result property="name" column="NAME"/>
		<result property="email" column="EMAIL"/>
		<result property="phone" column="PHONE"/>
	</resultMap>
	
	<select id="getMembers" resultType = "member">
		SELECT * FROM member1
	</select>
	
	<select id = "getUpdateMember" resultType = "member"
	parameterType="int">
		SELECT * FROM member1 WHERE id = #{id}
	</select>
	
	<insert id="insertMember" parameterType="member">
		INSERT INTO member1 VALUES(member1_seq.nextval, #{name}, #{email}, #{phone})
	</insert>
	
	<update id="updateMember" parameterType="member">
		UPDATE member1 SET name = #{name}, email = #{email}, phone = #{phone}
		WHERE id = #{id}
	</update>
	
	<delete id="deleteMember" parameterType = "int">
		DELETE member1 WHERE id = #{id}
	</delete>
</mapper>